void intersection(int *arr1, int *arr2, int n, int m) 
{
    //Write your code here
    sort(arr1,arr1+n);
    sort(arr2,arr2+m);
    int i = 0, j = 0;
    //2 3 4 5 6 8 
    //2 3 4 7
    while (i < n && j < m) {
        if (arr1[i] < arr2[j]) {
            i++;
        } 
        else if (arr1[i] > arr2[j]) {
            j++;
        } 
         else {
            cout << arr1[i] << " ";
            i++;
            j++;
        }
    }
}
