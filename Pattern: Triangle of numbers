
#include <iostream>
using namespace std;
int main () {
int n ;
cin>>n;
int i = 1;
while (i<=n) {
    int space = 1;
    while (space<=n-i){
        cout<<' ';
        space++;
    }
   int p = i;
   int j = 1;
   while(j<=i){
    cout<<p;
     p++;
     j++;
   }
   int k=1;
   p = p-2;
   while(k<=i-1){
    cout<<p;
    p--;
     k++;
     }
cout<<endl;
i++;
}
}
